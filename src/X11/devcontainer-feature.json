{
    "id": "x11-support",
    "version": "1.0.0",
    "name": "X11 Support",
    "documentationURL": "https://github.com/tbd",
    "description": "Installs X11 support",
    "options": {
        "x11": {
            "type": "boolean",
            "default": true,
            "description": "Install X11 support?"
        },
        "display": {
            "type": "string",
            "proposals": [
                "host.docker.internal:0",
                "localhost",
                "$(IP)",
                "$(HOSTNAME)"
            ],
            "default": "host.docker.internal:0",
            "description": "Set DISPLAY environment variable for X11 sessions"
        },
        "x11Socket": {
            "type": "string",
            "default": "/tmp/.X11-unix:/tmp/.X11-unix",
            "description": "Set socket to use for X11"
        }
    }
}
